<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Yelpcamp</h1>
      <p>View Amazing Campgrounds</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new"
          >Add New Campgrounds</a
        >
      </p>
    </div>
  </header>
  <div class="row">
    <div class="col-lg-12"><h3>Our Most Popular Campgrounds!</h3></div>
  </div>
  <div class="row">
    <% campgrounds.forEach((campground) => { %>
    <div class="col-md-3 col-sm-6">
      <div class="card text-center">
        <img class="card-img-top" src="<%= campground['image'] %>" />
        <div class="card-body">
          <div class="card-title"><%= campground['name'] %></div>
        </div>
        <p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
            >More Info</a
          >
        </p>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<% include ../partials/footer %>
